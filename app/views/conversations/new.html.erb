<%= render 'shared/navbarburger'%>

<div class="index-wrapper">
  <%= image_tag 'indexbg.png', height: "300px", class: "index-background-img" %>

  <div class="container mt-5">
    <h5>Create a new conversation</h5>

    <div class="simpleformnew mt-3">
      <%= simple_form_for [@family, @conversation] do |f| %>
      <%= f.input :name %>
       <input type="text" name="skipform" value="-2" class="hidden">
      <%= f.button :submit, class: "btn btn-info btn-block"%>
      <% end %>
    </div>
  </div>
</div>
