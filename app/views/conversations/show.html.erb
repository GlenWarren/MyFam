<%= render 'shared/navbarburger'%>
<div class="container">
  <div class="container d-flex conv-show-title">
    <h2 class="conversation-name"><%= @conversation.name %></h2>
    <%= link_to "Edit",edit_family_conversation_path  %>
    <%= link_to "Delete", family_conversation_path(@conversation),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </div>
  <div class="container-messages">
      <% @messages.each do |message| %>
      <div class="message">
        <div class="message-info">
          <p><strong><%= message.user.username %></strong></p>
          <p><%= message.created_at %></p>
        </div>
        <%= message.content %>
      </div>
      <% end %>
  </div>

  <div class="message-input">
      <%= render 'messages/form', message: @message %>
    </div>


</div>

