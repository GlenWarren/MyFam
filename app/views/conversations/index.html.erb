<%= render 'shared/navbarburger'%>

<div class="container">

  <h4 class="title">My Conversations</h4>
  <%= link_to "New", new_family_conversation_path  %>
  <% if @subscriptions.nil? %>
    <p>No Subscriptions</p>
  <% else %>
    <% @subscriptions.each do |sub| %>
      <%= link_to family_conversation_path(@family.id, sub.conversation.id) do %>
        <div class="card-product">
          <div class="conv-name pt-2">
            <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
            <%= sub.conversation.name %>
          </div>
          <div class="card-body d-flex">
            <% message = Message.where(conversation_id: sub.conversation.id).last %>
            <% unless message.nil? %>
              <%= message.content %>
            <% end  %>
            <p class="ml-auto"><i class="arrow right arrow-right"></i></p>
          </div>

        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

