<div class="homecontainer">
<div class="logo-myfam" style="position: center;">
    <%= image_tag "logomyfam.png", :class=>"icons" %>
  </div>
<h1 style="font-size: 36px;">MyFam</h1>
</div>
<hr>

<div class="simpleformnew mt-5">
 <div class="container">
    <div class="wrapper-form" style=" width: 400px; padding-right: 15px;">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

<div class="form-actions btn-block mb-3">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>

      <div class="d-flex justify-content-between">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
  </div>
