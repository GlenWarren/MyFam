<div class="container">
  <div class="pt-2">
    <h5>Manage the <%= @family.name %> clan</h5>
    <%= simple_form_for @family do |f| %>
      <%= f.input :name, label: "edit name" %>
      <%#= f.input :avatar %>
      <%#= f.input :avatar_cache, as: :hidden %>
      <%= f.button :submit, class: "btn btn-info"%>
    <% end %>
    <br><br>
    <h5>family members:</h5>
    <% @users.each do |m| %>
      <%= m.username %>
      <br>
    <% end %>
    <%= simple_form_for [@family, @membership] do |f| %>
      <%= f.input :user_id %>
      <%= f.button :submit, class: "btn btn-info"%>
    <% end %>
    <%= link_to 'Delete Family', family_path(@family), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-dark mt-5" %>
    <%#= link_to 'Leave Family', membership_path(@family), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-dark" %>

  </div>
</div>
